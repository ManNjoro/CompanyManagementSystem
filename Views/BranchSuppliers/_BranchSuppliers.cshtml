@model BranchSupplier
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="branchsuppliers" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <div class="row mb-3">
        <div class="col-2">
            <label asp-for="BranchId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="BranchId" class="form-control form-select" asp-items="@Model.BranchOptions">
                <option disabled selected>-- Select Branch --</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="SupplierName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="SupplierName" class="form-control" readonly />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="SupplierName"></span>
        </div>
    </div>
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="SupplyType" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="SupplyType" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="SupplyType"></span>
        </div>
    </div>
    

    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success" asp-controller="branchsuppliers" asp-action="index">Back To List</button>
        </div>
    </div>

</form>