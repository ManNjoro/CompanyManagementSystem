@model Employee
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="categories" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <input type="hidden" asp-for="EmpId" />
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="FirstName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="LastName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
        </div>
    </div>

</form>