@model Employee
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="employee" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <input type="hidden" asp-for="EmpId" />
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="FirstName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="LastName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="BirthDay" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="date" asp-for="BirthDay" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="BirthDay"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Sex" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="Sex" class="form-control form-select" asp-items="@Model.SexOptions">
                <option disabled selected>Select Gender</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Salary" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" min="0" asp-for="Salary" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Salary"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="SupervisorId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="SupervisorId" class="form-control form-select" asp-items="@Model.SupervisorOptions">
                <option disabled selected>-- Select Supervisor --</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="BranchId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="BranchId" class="form-control form-select" asp-items="@Model.BranchOptions">
                <option selected disabled>-- Select Branch --</option>
            </select>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success" asp-controller="employee" asp-action="index">Back To List</button>
        </div>
    </div>

</form>