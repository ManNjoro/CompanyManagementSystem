@model CompanyManagementSystem.Models.UserRole
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="users" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <input type="hidden" asp-for="@Model.applicationUser.Id" />
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="@Model.applicationUser.Firstname" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="@Model.applicationUser.Firstname" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="@Model.applicationUser.Firstname"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="@Model.applicationUser.Lastname" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="@Model.applicationUser.Lastname" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="@Model.applicationUser.Email" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="email" asp-for="@Model.applicationUser.Email" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="SelectedRole" class="col-form-label">Role</label>
        </div>
        <div class="col-6">
            <select asp-for="SelectedRole" asp-items="@Model.ApplicationRoles" class="form-control form-select">
                <option disabled selected>--Select Role--</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success" asp-controller="users" asp-action="index">Back To List</button>
        </div>
    </div>

</form>