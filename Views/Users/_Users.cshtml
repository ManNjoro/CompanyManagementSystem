@model ApplicationUser
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="users" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <input type="hidden" asp-for="Id" />
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Firstname" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Firstname" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Firstname"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Lastname" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Lastname" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Email" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="email" asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success" asp-controller="users" asp-action="index">Back To List</button>
        </div>
    </div>

</form>