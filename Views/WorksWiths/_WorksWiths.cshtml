@model WorksWith
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="workswiths" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {

        <input type="hidden" asp-for="EmpId" />
        <input type="hidden" asp-for="ClientId" />
    }
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EmpId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select id="EmpId" asp-for="EmpId" class="form-control form-select" asp-items="@Model.EmployeeOptions">
                <option disabled selected>-- Select Employee --</option>
            </select>
            <div class="col">
                <span class="text-danger" asp-validation-for="EmpId"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="ClientId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select id="ClientId" asp-for="ClientId" class="form-control form-select" asp-items="@Model.ClientOptions">
                <option disabled selected>-- Select Client --</option>
            </select>
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="ClientId"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="TotalSales" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" id="TotalSales" asp-for="TotalSales" readonly class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="TotalSales"></span>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-2">
            <button class="btn btn-primary">Save</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success" asp-controller="workswiths" asp-action="index">Back To List</button>
        </div>
    </div>

</form>
<!-- Add this script section at the end of the Add.cshtml view -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#EmpId, #ClientId').change(function () {
                var empId = $('#EmpId').val();
                var clientId = $('#ClientId').val();

                $.ajax({
                    url: '@Url.Action("GetTotalSales", "WorksWiths")',
                    type: 'GET',
                    data: { empId: empId, clientId: clientId },
                    success: function (data) {
                        $('#TotalSales').val(data); // Update TotalSales field with the returned value
                    },
                    error: function () {
                        alert('Error occurred while retrieving total sales.');
                    }
                });
            });
        });
    </script>
}
